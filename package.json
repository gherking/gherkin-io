{
  "name": "gherkin-io",
  "version": "1.0.0",
  "description": "Tool to read/write GHerkin feature files and work with Gherking AST",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run compile && npm run copyToDist && npm test && npm run typedoc",
    "buildUpdate": "npm run compile && npm run copyToDist && npm run postbuild",
    "copyToDist": "copyfiles -f *.txt *.md package.json dist",
    "typedoc": "typedoc --out ./docs ./src && touch ./docs/.nojekyll",
    "clean": "rimraf ./dist ./docs",
    "test": "jest",
    "tslint": "tslint -c tslint.json ./src/**/*.ts ./tests/**/*.ts",
    "compile": "tsc && npm run tslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gherking/gherkin-io.git"
  },
  "keywords": [
    "Gherkin",
    "Feature",
    "Scenario",
    "Scenario",
    "Outline",
    "Background",
    "Step",
    "Examples"
  ],
  "author": "Team GherKing",
  "license": "MIT",
  "contributors": [
    "Laszlo Szikszai <sziklaszlo@gmail.com>"
  ],
  "files": [
    "*.js",
    "*.d.ts",
    "*.js.map"
  ],
  "engines": {
    "node": ">=10"
  },
  "bugs": {
    "url": "https://github.com/gherking/gherkin-io/issues"
  },
  "homepage": "https://github.com/gherking/gherkin-io#readme",
  "devDependencies": {
    "@types/fs-extra": "^9.0.6",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "copyfiles": "^2.4.1",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.0",
    "tslint": "^6.1.3",
    "typedoc": "^0.20.19",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "fs-extra": "^9.1.0",
    "gherkin": "^9.0.0",
    "gherkin-ast": "^3.0.1",
    "gherkin-formatter": "^0.1.0",
    "glob": "^7.1.6"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "dist"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "./src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  }
}
