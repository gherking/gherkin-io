{
  "name": "gherkin-io",
  "version": "1.1.3",
  "description": "Tool to read/write GHerkin feature files and work with Gherking AST",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "npm run buildUpdate && npm test && npm run typedoc",
    "buildUpdate": "npm run clean && npm run compile && npm run copyToDist",
    "copyToDist": "copyfiles -f *.txt *.md package.json dist",
    "typedoc": "typedoc --out ./docs ./src && touch ./docs/.nojekyll",
    "clean": "rimraf ./dist ./docs ./reports ./coverage",
    "test": "dotenv-ng --var JEST_JUNIT_OUTPUT_DIR=./reports -- jest --coverage",
    "lint": "eslint . --ext .ts --fix",
    "compile": "tsc && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gherking/gherkin-io.git"
  },
  "keywords": [
    "Gherkin",
    "Feature",
    "Scenario",
    "Scenario Outline",
    "Background",
    "Step",
    "Examples"
  ],
  "author": "GherKing (https://github.com/gherking)",
  "license": "MIT",
  "contributors": [
    "Laszlo Szikszai <sziklaszlo@gmail.com>"
  ],
  "files": [
    "**/*.js",
    "**/*.d.ts",
    "**/*.js.map"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": {
    "url": "https://github.com/gherking/gherkin-io/issues"
  },
  "homepage": "https://github.com/gherking/gherkin-io#readme",
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.0",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "copyfiles": "^2.4.1",
    "dotenv-ng": "^1.1.1",
    "eslint": "^8.25.0",
    "jest": "^29.2.0",
    "jest-junit": "^14.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "typedoc": "^0.23.17",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@cucumber/gherkin-streams": "^5.0.1",
    "debug": "^4.3.4",
    "fs-extra": "^10.1.0",
    "gherkin-ast": "^3.3.1",
    "gherkin-formatter": "^1.1.0",
    "glob": "^8.0.3"
  },
  "jest": {
    "reporters": [
      "default",
      "jest-junit"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "dist"
    ],
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "./src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  }
}
